{
  "compilerOptions": {
    "jsx": "react-jsx",                            
    "lib": ["dom", "dom.iterable", "esnext"],                                        
    "allowJs": true,                                  
    "moduleResolution": "node",                       
    "resolveJsonModule": true,                        
    "noEmit": true,                                   
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,                        
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },

  "include": ["src"]
}
